<body>
  

<span class="bodydisplay">
  <article class="post">
    <div class="posthead">
      <h2 class="posttitle" href="/post/{{id}}">{{title}}</h2>
      <p class="postdata">Created by
        <a href="/profile/{{user_id}}">{{user.name}}</a>
        on
        {{format_date date_created}}</p>
        <p class="postid hidden">{{id}}</p>
    </div>
    <div class="postbody">
      <p class="postcontent">{{body}}
      </p>
    </div>
  </article>
  <section class="comments">
    {{#each comments as |comment|}}
    <div class="commentcard">
      <div class="commenthead"></div>
    
    <div class="comment">
      <p class="commentcontent">
        {{comment.body}}
      </p>
      <p class="commentdata">
        -
        <a href="/profile/{{user.id}}">{{user.name}}
        </a>
        {{format_date date_created}}
      </p>
    </div>
    </div>
    {{/each}}
    <div class="bigcard hidden" id="addcomment">
    <div class="cardinput">
      <div class="inputdiv">
      <div class="inputdiv">
        <label for="bodyinput">Comment</label>
        <textarea
          id="bodyinput"
          name="bodyinput"
          placeholder="What would you like to say?"
        ></textarea>
      </div>
      <button type="submit" id="submitbtn">Submit</button>
    </div>
    </div>
  </section>
  {{#if logged_in}}
  <button id="addcommentbtn">Comment</button>
  {{else}}
  <a href="/login" class="loginswitch">Login to comment</a>
  {{/if}}
</span>
</body>

<script src="/js/comment.js"></script>
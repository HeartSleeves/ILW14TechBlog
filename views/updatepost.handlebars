<body>

  <span class="bodydisplay">
    <article class="post">
      <div class="posthead">
        <input type="text" class="updatetitle" value="{{title}}"></input>
        <p class="postdata">Created by
          <a href="/profile/{{user_id}}">{{user.name}}</a>
          on
          {{format_date date_created}}</p>
        <p class="postid hidden">{{id}}</p>
      </div>
      <div class="postbody">
        <textarea class="postcontent">{{body}}
        </textarea>
      </div>
    </article>
    <section>
      <button id="updatebtn">Update</button>
      <button id="deletebtn">Delete</button>
    </section>
  </span>
</body>

<script src="/js/update.js"></script>